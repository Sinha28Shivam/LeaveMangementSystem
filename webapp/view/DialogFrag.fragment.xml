<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="idDialog" title="Leave Description">
        <VBox id="_IDGen">
            <Text id="_IDGenTe" text="Please provide a description for your leave:" class="text1"/>
            <TextArea id="descriptionInput" width="100%" rows="1" />
        </VBox>
        <buttons >
            <Button id="_IDGenButton1" text="Submit" press=".onSubmitDialog" class="btn" />
            <Button id="_IDGenButton2" text="Close" press=".onCloseDialog" class="btn" />
        </buttons>
    </Dialog>
</core:FragmentDefinition>