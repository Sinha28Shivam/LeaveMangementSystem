                  </VBox>
                 
                  <VBox id="pnl21vbox2" height="100%" class="panelVbox1" >
                   <items>
                     <Text id="pnl2txt3" text="{lD>/leaveData/CompensatoryLeave/availed}.00" class="text2"></Text>
                     <Text id="pnl2txt4" text="AVAILED" class="text2"></Text>
                   </items>
                  </VBox>
                 
                 </items>
               </HBox>
             </content>
             </Panel>
 <Panel id="pnl3" headerText="My Leave" class="classPanel">
             <content>
               <HBox id="pnl3hbox">
