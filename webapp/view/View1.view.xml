    </contentRight>
    </Bar>
    </customHeader>



<content>
<HBox id="_IDGenHBox3" width="100%" >
<VBox id="_IDGenVBox1" width="25%">

 <Panel id="pnl1" headerText="Annual Leave"  class="classPanel">
             <content>
               <HBox id="pnl1hbox">
                 <items>
                  <Image id="pnl1iimg" src="/My_images/island.png"></Image>
                  <VBox id="pnl1vbox1" height="100%" class="panelVbox1" >
                   <items>
                     <Text id="pnl1txt1" text="{lD>/leaveData/AnnualLeave/available}.00" class="text2"></Text>
                     <Text id="pnl1txt2" text="AVAILABLE" class="text2"></Text>
                   </items>
                   <layoutData>
                     <FlexItemData id="flxitmdata1" styleClass="sapUiMediumMarginEnd"></FlexItemData>
                   </layoutData>
                  </VBox>
                 
                  <VBox id="pnl1vbox2" height="100%" class="panelVbox1" >
                   <items>
                     <Text id="pnl1txt3" text="{lD>/leaveData/AnnualLeave/availed}.00" class="text2"></Text>
                     <Text id="pnl1txt4" text="AVAILED" class="text2"></Text>
                   </items>
                  </VBox>
                 
                 </items>
               </HBox>
             </content>
             </Panel>
 <Panel id="pnl2" headerText="Compensatory Leave" class="classPanel">
             <content>
               <HBox id="pnl2hbox">
