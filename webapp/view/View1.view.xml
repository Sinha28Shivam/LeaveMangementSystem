                   <items>
                     <Text id="pnl4txt3" text="{lD>/leaveData/RestrictedLeave/availed}.00" class="text2"></Text>
                     <Text id="pnl4txt4" text="AVAILED" class="text2"></Text>
                   </items>
                  </VBox>
                 
                 </items>
               </HBox>
             </content>
             </Panel>
</VBox>
<!-- This is for calender -->
<VBox id="_IDGenVBox2" width="50%">
               <unified:Calendar id="calendar" showWeekNumbers="true" select="handleSelect" intervalSelection="true" />
                <Button id="IDGenButton1" text="Apply" press="onSubmitLeave" />
 </VBox>
<VBox id="_IDGenVBox3" width="25%">
<ScrollContainer id="scroll_id" width="100%" height="500px" vertical="true">
          <List id="id_lst" headerText="Holidays" items="{holidays>/holidays}" width="100%" >
           <items>
           <StandardListItem id="id_strdLst" title="{holidays>name}" description="{holidays>day} - {holidays>date}">
           
           </StandardListItem>
           </items>
          </List>
          </ScrollContainer>
</VBox>
           
            
              </HBox>

        </content>
      



        <!-- This is a footer part -->
         <footer>
        <Toolbar id="_IDGenToolbar1" height="50px" style="Standard">
