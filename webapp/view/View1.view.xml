                  </VBox>
                 
                  <VBox id="pnl1vbox3" height="100%" class="panelVbox1" >
                   <items>
                     <Text id="pnl3txt3" text="{lD>/leaveData/MyLeave/availed}.00" class="text2"></Text>
                     <Text id="pnl3txt4" text="AVAILED" class="text2"></Text>
                   </items>
                  </VBox>
                 
                 </items>
               </HBox>
             </content>
             </Panel>
 <Panel id="pnl4" headerText="Restricted Leave" class="classPanel">
             <content>
               <HBox id="pnl4hbox">
